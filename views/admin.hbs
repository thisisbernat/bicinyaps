<div id="header">
    <div style="display:flex;justify-content:space-between">
        <a href="/"><img src="../images/bicinyaps_logo.png" id="bicinyaps-logo" alt="Bicinyaps logo" /></a>
        <div>
            <form id="logout-form" action="/logout" method="POST">
                <button class="link" title="Logout"><i class="fa-solid fa-arrow-right-from-bracket"></i></button>
            </form>
        </div>
    </div>
    <h3>Eina col·laborativa de millora de la infraestructura ciclista de Barcelona</h3>
</div>

<div class="content-admin">
    <hr />
    <div class="text-center">
        <div class="btn-group">
            {{#if inMap}}
            <a href="/admin/proposats" class="btn btn-secondary btn-lg">Bicinyaps proposats</a>
            <a href="/admin/publicats" class="btn btn-success active btn-lg" aria-current="page">Bicinyaps publicats</a>
            {{else}}
            <a href="/admin/proposats" class="btn btn-success active btn-lg" aria-current="page">Bicinyaps proposats</a>
            <a href="/admin/publicats" class="btn btn-secondary btn-lg">Bicinyaps publicats</a>
            {{/if}}
            
        </div>
    </div>
    <br />
    {{#each nyaps}}
    {{> nyapfile}}
    {{/each}}

    {{#unless nyaps}}
    <div class="d-flex justify-content-center">
        <div class="alert alert-success w-30" role="alert">
            <i class="fa-solid fa-circle-info"></i> 
            {{#if inMap}}
            No hi ha bicinyaps publicats!
            {{else}}
            No hi ha nous bicinyaps proposats!
            {{/if}}
        </div>
    </div>
    {{/unless }}
</div>

<div id="footer">
    <span style="font-weight:bold;font-size:small;color:rgb(80, 80, 80);">Bernat
        Escarrà - Ironhack - Barcelona 2022</span>
    <div id="social-links" style="padding-top:0px;font-size:larger">
        <a href="https://github.com/thisisbernat/bicinyaps" target="_blank"><i
                class="fa-brands fa-github"></i></a>&nbsp;
        <a href="https://www.linkedin.com/in/bernatescarra/" target="_blank"><i class="fa-brands fa-linkedin"></i></a>
    </div>
</div>

