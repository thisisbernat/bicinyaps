<div class="nyap-partial shadow">
  <div id="map{{@this.index}}" style="height:300px"></div>
  <div class="nyap-details d-flex flex-column justify-content-between">
    <p><span class="fw-bolder">Categoria</span><br />{{this.category}}</p>
    <p><span class="fw-bolder">Descripció</span><br />{{this.description}}</p>
    <p><span class="fw-bolder">Creació: </span>{{this.created}}</p>
    <p><span class="fw-bolder">Email col·laborador: </span>
      {{# if this.authorEmail}}
      <a href="mailto:{{this.authorEmail}}">{{this.authorEmail}}</a></p>
      {{else}}
      No informat
      {{/if}}
    <div class="icons d-flex align-items-center">
      <span class="fw-bolder">Foto:</span>
      {{# if this.image}}
      <a href="{{this.image}}" target="_blank"><i class="fa-solid fa-image fs-2"></i></a>        
      {{else}}
      No informada
      {{/if}}
      
    </div>
  </div>
  <div class="d-flex justify-content-end align-items-center">
    <div class="nyap-actions">
      <i class="fa-solid fa-toggle-off"></i>
      <i class="fa-solid fa-pen-to-square"></i>
      <i class="fa-solid fa-trash-can"></i>
    </div>
  </div>
</div>